{
  "name": "ec-europa/oe-project",
  "description": "OpenEuropa project template.",
  "type": "project",
  "license": "EUPL-1.1",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "composer/installers": "^1.2",
    "cweagans/composer-patches": "~1.0",
    "drupal/core": "8.5.x-dev",
    "drupal/config_installer": "~1.5",
    "drupal-composer/drupal-scaffold": "^2.2",
    "ec-europa/oe_profile": "dev-master",
    "ec-europa/oe_core": "dev-master",
    "ec-europa/oe_theme": "dev-master"
  },
  "require-dev": {
    "drupal/console": "~1",
    "drush/drush": "~9",
    "mikey179/vfsstream": "~1.2",
    "phpunit/phpunit": "~5",
    "ec-europa/oe-code-review": "~0.1",
    "ec-europa/oe-task-runner": "dev-master",
    "ec-europa/oe-behat": "dev-master"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "autoload": {
    "psr-4": {
      "EC\\OpenEuropa\\Project\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EC\\OpenEuropa\\Project\\Tests\\": "./tests/"
    }
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "post-install-cmd": ["@drupal-scaffold"],
    "post-update-cmd": ["@drupal-scaffold"]
  },
  "extra": {
    "installer-paths": {
      "build/core": ["type:drupal-core"],
      "build/libraries/{$name}": ["type:drupal-library"],
      "build/modules/contrib/{$name}": ["type:drupal-module"],
      "build/profiles/contrib/{$name}": ["type:drupal-profile"],
      "build/themes/contrib/{$name}": ["type:drupal-theme"]
    }
  }
}
